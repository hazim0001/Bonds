<div class="container">
<div class="d-flex justify-content-between mt-2">
  <h1>Stocks</h1>
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#newstockModal">Add new stock</button>
</div>
<h3>All stocks total = <%= @total %></h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Instrument</th>
        <th scope="col">Symbol</th>
        <th scope="col">Postions</th>
        <th scope="col">average price</th>
        <th scope="col">cost basis</th>

      </tr>
    </thead>
    <tbody>
        <% counter = 1 %>
        <% @stocks.each do |stock| %>
      <tr>
          <th scope="row"><%= counter %></th>
          <td><%= stock.instrument %></td>
          <td><%= stock.symbol %></td>
          <td><%= stock.position %></td>
          <td><%= stock.average_price.round(2) %></td>
          <td><%= stock.cost_basis.round(2) %></td>

          <td class=" pb-0">
            <p class="card-text d-flex flex-row-reverse justify-content-between">
              <%= link_to stock_path(stock.id), method: :delete, data: { confirm: "Are you sure you want to delete this stock?", disable_with: "Processing..." } do %>
                <i class="far fa-trash-alt" style="color: #ec524b;"></i>
              <% end %>
              <button class="m-0" type="button" data-toggle="modal" data-target="#updatestockModal<%= stock.id %>">
                <i class="far fa-edit mx-3" style="color: gray;"></i>
              </button>
            </p>
          </td>
          <%#= render partial: 'update_stock_modal', locals:{ stock: stock } %>
      </tr>
          <% counter += 1 %>
        <% end %>
    </tbody>
  </table>
</div>
<%#= render partial: 'new_stock_modal', locals:{ new_stock: @new_stock } %>



